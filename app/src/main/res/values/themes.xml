<resources xmlns:tools="http://schemas.android.com/tools">
    <!--==================== BASE THEME ====================-->
    <!-- Activity Main-->
    <style name="Theme.Dictionary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/grey_dark</item>
        <item name="colorOnPrimary">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">#D81B60</item>
        <item name="colorOnSecondary">@color/black_text_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.Dictionary.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- Splash Main-->
    <style name="Theme.Dictionary.Splash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">#D81B60</item>
        <item name="colorOnSecondary">@color/black_text_secondary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.Dictionary.Splash.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <!--==================== COMPONENTS ====================-->
    <!-- Tab Text -->
    <style name="Tab.Text" parent="TextAppearance.Design.Tab">
<!--        <item name="android:textSize">@dimen/act_main_tab_txt_size</item>-->
        <item name="android:textColor">@color/blue_text_secondary</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Tab layout -->
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/Tab.Text</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <!-- Bottom navigation bar -->
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>


    <style name="Theme.Dictionary.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Dictionary.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>