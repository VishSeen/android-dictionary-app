<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.WelcomeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="">

    <TextView
        android:id="@+id/frag_welcome_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/frag_welcome_title"
        android:textColor="@color/blue_text_primary"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="350dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Swipe to continue .."
        android:textAlignment="center"
        android:textColor="@color/blue_text_secondary"
        app:layout_constraintEnd_toEndOf="@+id/frag_welcome_txt_title"
        app:layout_constraintStart_toStartOf="@+id/frag_welcome_txt_title"
        app:layout_constraintTop_toBottomOf="@+id/frag_welcome_txt_title" />

</androidx.constraintlayout.widget.ConstraintLayout>